@model IEnumerable<ContactsHolder.Models.Contact>
@{
    ViewData["Title"] = "Home Page";
     var importantContacts=0;
foreach (var i in Model) {
        importantContacts++;
        }
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Below are your Important contacts</p>
</div>
<div class="row">
    <div class="col">
      <h3>Important Contacts(@importantContacts)</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.type)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int userID;
        }
@foreach (var item in Model) {
    userID=@item.id;
        <tr>
            <td><a asp-action="Index" asp-route-id="@item.id" >
                @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
             
        </tr>
}
    </tbody>
</table>

    </div>
    <div class="col">
        @* <label asp-for="email" class="control-label">hi</label>
                <input asp-for="email" class="form-control" /> *@
    </div>
  </div>
