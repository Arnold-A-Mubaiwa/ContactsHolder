@model IEnumerable<ContactsHolder.Models.Contact>

@{
    ViewData["Title"] = "Index";
    var AllContacts=0;
foreach (var i in Model) {
        AllContacts++;
        }
        
}
<h2>Contacts(@AllContacts)</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Importance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
               @* @{
                   Html.Value(modelItem => item.Importance);
                   var value=Html.DisplayFor(modelItem => item.Importance);
               }
               @if(@value.ToString =="Yes"){

               } *@
               @if((item.Importance)=="Yes"){
                   <input checked data-size="mini" data-toggle="toggle" type="checkbox">
               }
               else{
                   <input unchecked  data-size="mini" data-toggle="toggle" type="checkbox">
               }
               
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}

    </tbody>
</table>
